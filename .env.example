# Notrix Environment Configuration
# Copy this file to .env and fill in values

# Secret key for encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=

# Database URL (SQLite by default)
DATABASE_URL=sqlite+aiosqlite:///./notrix.db

# Target portfolio path (relative to app root)
TARGET_PORTFOLIO_PATH=data/target_portfolio.csv

# Weight sum tolerance for validation
WEIGHT_SUM_EPSILON=0.01
